{% extends "base.html.twig" %}

{% block body %}


	<div class="mb-5 ftco-blocks-cover-1">
      <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('/templates/images/caroussel/3.jpg')">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
              <h1 class="mb-3">{{ (announcements != null) ? titleCat.Category.Name : titleCat }}</h1>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section">
    	 <div class="container">
    	 	<div class="row mb-5">
    	 		<div class="col-12">
    	 			<div class="text-center">
			        	<button class="brand btn btn-primary filter-button" data-filter="all">Tout</button>
			        	<button class="brand btn btn-default filter-button" data-filter="a2">A2</button>
			        	<button class="brand btn btn-default filter-button" data-filter="honda">Honda</button>
			        	<button class="brand btn btn-default filter-button" data-filter="kawasaki">Kawasaki</button>
			        	<button class="brand btn btn-default filter-button" data-filter="ktm">Ktm</button>
			        	<button class="brand btn btn-default filter-button" data-filter="suzuki">Suzuki</button>
			        	<button class="brand btn btn-default filter-button" data-filter="triumph">Triumph</button>
			        	<button class="brand btn btn-default filter-button" data-filter="yamaha">Yamaha</button>
			    	</div>
    	 		</div>
    	 	</div>

    	 	<div class="row">
    	 		<div class="col-12 img-years announcement-col">

    	 			{% for announcement in announcements %}
    	 				{% if announcement.IsActive %}
    	 					{% if announcement.IsSold == false %}
	    	 					<div class="item-1 h col-lg-4 col-md-6 mb-4 announcement-contenaire mr-2 filter {{ (announcement.IsPermisA2) ? 'a2' : '' }} {{ announcement.Title|split(' ')[0]|lower }}">
					                <a href="{{ path('announcement', {'id': announcement.id}) }}">
					                	<img src="./../templates/imagesmotos/{{ asset(announcement.Image1) |split('/')|last }}" alt="Image" class="img-fluid">
					                </a>
					                <div class="item-1-contents announcement-text">
					                  <a class="card-announcement" href="{{ path('announcement', {'id': announcement.id}) }}">
					                  	<h3 class="h3-annoucement">{{ announcement.Title }}</h3>
					                  </a>
					                  <ul>
					                    <li class="d-flex"><span>Permis A2</span> <span class="price ml-auto">{{announcement.IsPermisA2 ? 'Oui' : 'Non'}}</span>
	                        			<li class="d-flex"><span>Cylindrée</span> <span class="price ml-auto">{{announcement.Cylindrical}}</span></li>
	                        			<li class="d-flex"><span>Kilomètres</span> <span class="price ml-auto">{{announcement.Km}}</span></li>
	                        			<li class="d-flex"><span>Prix</span> <span class="price ml-auto">{{announcement.Price}}€</span></li>
					                  </ul>
					                </div>
				              	</div>
				              {% else %}
				              	<div class="item-1 h col-lg-4 col-md-6 mb-4 announcement-contenaire mr-2 filter {{ (announcement.IsPermisA2) ? 'a2' : '' }} {{ announcement.Title|split(' ')[0]|lower }}">
					                <img src="./../templates/imagesmotos/{{ asset(announcement.Image1) |split('/')|last }}" alt="Image" class="img-fluid">
					                <div class="item-1-contents announcement-text">
					                  <h3 class="h3-annoucement">{{ announcement.Title }}</h3>
					                  <span class="year-sold">
					                  	<span>Vendu</span>
					                  </span>
					                </div>
				              	</div>
			              	{% endif %}
    	 				{% endif %}	
    	 			{% endfor %}	

    	 			

		            

	    	 	</div>
    	 	</div>
    	</div>
    </div>
{% endblock %}