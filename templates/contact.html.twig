{% extends "base.html.twig" %}

{% block body %}

    <div class="ftco-blocks-cover-1">
      <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('http://localhost/boxracing/templates/images/caroussel/2.jpg')">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
              <h1 class="mb-3">Contactez nous !</h1>
              <p>N'hésitez pas à nous contacter par e-mail ou téléphone</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5">
                    <form id="contact-form" name="contact-form" method="POST">

                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                              <input type="text" id="name" name="name" placeholder="Votre Nom" class="form-control" required="required">
                            </div>
                            <div class="col-md-6">
                                <input type="text" id="email" name="email" placeholder="Votre Email" class="form-control" required="required">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                              <input type="text" id="email" name="email" placeholder="Votre Email" class="form-control" required="required">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                              <input type="text" id="subject" required="required" name="subject" class="form-control" placeholder="Objet de votre demande">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                              <input type="file" id="pj" name="fichier" class="form-control" placeholder="Joindre un fichier">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                              <textarea type="text" required="required" id="message" name="message" cols="30" rows="10" class="form-control md-textarea" placeholder="Votre Message"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 mr-auto">
                              <a type="submit" class="btn btn-block btn-primary text-white py-3 px-5" onclick="sendMailClick()">Envoyer</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4 ml-auto">
                    <div class="bg-white p-3 p-md-5">
                      <h3 class="text-black mb-4">Contact Info</h3>
                      <ul class="list-unstyled footer-link">
                        <li class="d-block mb-3">
                          <span class="d-block text-black">Addresse:</span>
                          <span>4 Rue Hélène Boucher, 29260 Ploudaniel</span></li>
                        <li class="d-block mb-3"><span class="d-block text-black">Téléphone:</span><span>02 98 80 21 46</span></li>
                        <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>contact@box-racing.fr</span></li>
                      </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}