{% extends "base.html.twig" %}

{% block body %}

	<div class="mb-5 ftco-blocks-cover-1">
      <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('./../templates/imagesmotos/{{ asset(announcement[0].Image1) |split('/')|last }}')">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
              <h1 class="mb-3">{{ announcement[0].Title }}</h1>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section">
    	<div class="container">
   
    		<div class="row mb-5">
    			<div class="col-12">
    				<div class="nonloop-block-13 owl-carousel d-flex" data-toggle="modal" data-target="#photo-modal">
    					
	    				<a href="#"><img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image1) |split('/')|last }}" alt=""></a>

						<a href="#"><img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image2) |split('/')|last }}" alt="..."></a>

						<a href="#"><img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image3) |split('/')|last }}" alt="..."></a>

						<a href="#"><img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image4) |split('/')|last }}" alt="..."></a>

						<a href="#"><img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image5) |split('/')|last }}" alt="..."></a>
						
    				</div>
    			</div>
    		</div>
    		<p class="text-center">
    			<a href="#" class=" col-1 btn btn-primary custom-prev">Préc</a>
            	<a href="#" class="col-1 btn btn-primary custom-next">Suiv</a>
        	</p>

        	<div class="row">
             	<div class="col-md-8 blog-content">
             		{{announcement[0].Description|raw}}</span>
					<h4 class="price">Prix : <span>{{announcement[0].Price}}€</span></h4>
           		</div>
           		
           		<div class="col-md-4 sidebar">
           			<div class="sidebar-box">
		              <div class="categories">
		                <h3>Caractéristiques</h3>
		                <li class="d-flex"><span class="caract">Cylindrée </span><span class="price ml-auto">{{ announcement[0].Cylindrical }}</span></li>
		                <li class="d-flex"><span class="caract">Km </span> <span class="price ml-auto">{{ announcement[0].Km }}</span></li>
		                <li class="d-flex"><span class="caract">Permis A2 </span> <span class="price ml-auto">{{announcement[0].IsPermisA2 ? 'Oui' : 'Non'}}</span></li>
		              </div>
		            </div>
           		</div>
        	</div>

    	</div>
	</div>
	
	<!--Modal-->
	<div class="modal fade" id="photo-modal" tabindex="-1" role="dialog" aria-hidden="true">
	  <div class="modal-dialog" role="document" style="max-width: 50%;">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        
			<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			  <div class="carousel-inner">
			    <div class="carousel-item active">
			      <img src="../../templates/imagesmotos/{{ asset(announcement[0].Image1) |split('/')|last }}" class="d-block w-100" alt="...">
			    </div>
			    <div class="carousel-item">
			      <img src="../../templates/imagesmotos/{{ asset(announcement[0].Image2) |split('/')|last }}" class="d-block w-100" alt="...">
			    </div>
			    <div class="carousel-item">
			      <img src="../../templates/imagesmotos/{{ asset(announcement[0].Image3) |split('/')|last }}" class="d-block w-100" alt="...">
			    </div>
			    <div class="carousel-item">
			      <img src="../../templates/imagesmotos/{{ asset(announcement[0].Image4) |split('/')|last }}" class="d-block w-100" alt="...">
			    </div>
			    <div class="carousel-item">
			      <img src="../../templates/imagesmotos/{{ asset(announcement[0].Image5) |split('/')|last }}" class="d-block w-100" alt="...">
			    </div>
			    
			  </div>
			  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
			    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
			    <span class="carousel-control-next-icon" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>


	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!--EndModal-->


{% endblock %}