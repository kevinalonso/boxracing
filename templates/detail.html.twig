{% extends "base.html.twig" %}

{% block body %}
	<div class="w-100 mt-5">
		<a href="{{ path('category', {'id': announcement[0].Category.id}) }}" class="mt-5 ml-7">Retour Annonces</a>
	</div>
	
	<div class="container mt-60 mb-50">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						<a href="#">
							<div class="preview-pic tab-content" data-toggle="modal" data-target="#exampleModal">
								
								<img class="card-img-top img-thumbnail" src="../../templates/imagesmotos/{{ asset(announcement[0].Image1) |split('/')|last }}" alt=""data-target="#carouselExample" data-slide-to="0">	
								
								<img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image2) |split('/')|last }}" alt="..."data-target="#carouselExample" data-slide-to="1">
								
								<img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image3) |split('/')|last }}" alt="..."data-target="#carouselExample" data-slide-to="2">
								
								<img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image4) |split('/')|last }}" alt="..."data-target="#carouselExample" data-slide-to="3">

								<img class="img-thumbnail img-thumbnail-override" src="../../templates/imagesmotos/{{ asset(announcement[0].Image5) |split('/')|last }}" alt="..."data-target="#carouselExample" data-slide-to="4">
							</div>
						</a>
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{announcement[0].Title}}</h3>
						
						<span class="product-description">{{announcement[0].Description|raw}}</span>
						<h4 class="price">Prix : <span>{{announcement[0].Price}}â‚¬</span></h4>
						
					</div>
				</div>
			</div>
		</div>
	</div>


	<!--Modal-->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <div id="carouselExample" class="carousel slide" data-ride="carousel">
	          <ol class="carousel-indicators">
	            <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
	            <li data-target="#carouselExample" data-slide-to="1"></li>
	            <li data-target="#carouselExample" data-slide-to="2"></li>
	            <li data-target="#carouselExample" data-slide-to="3"></li>
	            <li data-target="#carouselExample" data-slide-to="4"></li>
	          </ol>
	          <div class="carousel-inner">
	            <div class="carousel-item active">
	              <img class="d-block w-100" src="../../templates/imagesmotos/{{ asset(announcement[0].Image1) |split('/')|last }}" alt="First slide">
	            </div>
	            <div class="carousel-item">
	              <img class="d-block w-100" src="../../templates/imagesmotos/{{ asset(announcement[0].Image2) |split('/')|last }}" alt="Second slide">
	            </div>
	            <div class="carousel-item">
	              <img class="d-block w-100" src="../../templates/imagesmotos/{{ asset(announcement[0].Image3) |split('/')|last }}" alt="Third slide">
	            </div>
	            <div class="carousel-item">
	              <img class="d-block w-100" src="../../templates/imagesmotos/{{ asset(announcement[0].Image4) |split('/')|last }}" alt="Fourth slide">
	            </div>
	            <div class="carousel-item">
	              <img class="d-block w-100" src="../../templates/imagesmotos/{{ asset(announcement[0].Image5) |split('/')|last }}" alt="Five slide">
	            </div>
	          </div>
	          <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
	            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
	            <span class="sr-only">Previous</span>
	          </a>
	          <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
	            <span class="carousel-control-next-icon" aria-hidden="true"></span>
	            <span class="sr-only">Next</span>
	          </a>
	        </div>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!--EndModal-->


{% endblock %}