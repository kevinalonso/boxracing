{% extends "base.html.twig" %}

{% block body %}

  <div class="cookies-spec">
      {{ render_esi(path('ch_cookie_consent.show_if_cookie_consent_not_set', { 'locale' : 'fr' })) }}
  </div>

  <div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('http://localhost/boxracing/templates/images/caroussel/2.jpg')">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-7">
            <h1 class="mb-3">Votre garage moto BoxRacing</h1>
            <p>Réparation rachat et revente de votre véhicule. Nous vous conseillerons au mieux afin de vous satisfaire</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="site-section bg-light">
    <div class="container">
      <div class="row justify-content-center  mb-5">
        <div class="col-md-7 text-center">
          <h3 class="scissors text-center"><a href="{{ path('category', {'id': categories[0].id}) }}">Motos D'occasions</a></h3>
          <p class="mb-5 lead">Ne manquez pas nos occasions !</p>
          <p class="text-center">
            <a href="#" class="btn btn-primary custom-prev">Précédent</a>
            <a href="#" class="btn btn-primary custom-next">Suivant</a>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-12">

          <div class="nonloop-block-13 owl-carousel d-flex">

            {% for announcement in announcements %}
              {% if announcement.IsSold == false %}
                <div class="item-1 h">
                  <img src="../../templates/imagesmotos/{{ asset(announcement.Image1) |split('/')|last }}" alt="Image" class="img-fluid">
                   <div class="item-1-contents">
                      <h3 class="h3-annoucement">{{announcement.Title}}</h3>
                      <ul>
                        <li class="d-flex"><span>Permis A2</span> <span class="price ml-auto">{{announcement.IsPermisA2 ? 'Oui' : 'Non'}}</span>
                        <li class="d-flex"><span>Cylindrée</span> <span class="price ml-auto">{{announcement.Cylindrical}}</span></li>
                        <li class="d-flex"><span>Kilomètres</span> <span class="price ml-auto">{{announcement.Km}}</span></li>
                        <li class="d-flex"><span>Prix</span> <span class="price ml-auto">{{announcement.Price}}€</span></li>
                      </ul>
                   </div>
                </div>
              {% endif %}
            {%  endfor %}
            
          </div>
          
        </div>
      </div>
    </div>
  </div>

  <div class="site-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="img-years">
            <iframe class="img-fluid" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2644.3970077927193!2d-4.2911038!3d48.4872787!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4816ad8363b3a9ed%3A0x5aef7fab7d331f08!2s4+Rue+H%C3%A9l%C3%A8ne+Boucher%2C+29260+Ploudaniel!5e0!3m2!1sfr!2sfr!4v1430740746223" frameborder="0" style="border:0;width: 100%;height: 320px;" allowfullscreen></iframe>
          </div>

        </div>
        <div class="col-lg-5 ml-auto pl-lg-5 text-center">
          <h3 class="scissors text-center">Retrouvez-nous 02.98.80.21.46</h3>
          <p class="lead">4 rue Hélène Boucher – ZI Mescoden 29260 PLOUDANIEL</p>
          <p class="lead">Horaires</p>
          <p class="lead">Mardi au vendredi : 9h00 à 12h00 | 14h00 à 19h00</p>
          <p class="lead">Samedi: 9h00 à 12h00 | 14h00 à 18h30</p>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
